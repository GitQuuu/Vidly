@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre</li>
    <li>Release date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Date added to database: @Model.DateAdded.ToShortDateString()</li>
    <li>Availability: @Model.NumberInStock</li>
</ul>


